{
  "name": "@segersniels/image",
  "version": "1.0.1",
  "description": "A dynamic and responsive default implementation of `next/image` that determines height and width on the go.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "scripts": {
    "postinstall": "yarn add --peer --ignore-scripts next react react-dom",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "check:typescript": "tsc --noEmit --skipLibCheck --project .",
    "lint": " eslint --ext ts,tsx .",
    "lint:fix": "eslint --ext ts,tsx . --fix",
    "clean": "rm -rf lib/*.js ; rm -rf lib/*.d.ts ; rm -rf lib/**/*.js ; rm -rf lib/**/*.d.ts"
  },
  "peerDependencies": {
    "next": "^10.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.48",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/segersniels/image.git"
  },
  "keywords": [
    "react",
    "next",
    "nextjs",
    "image",
    "responsive"
  ],
  "author": "Niels Segers",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/segersniels/image/issues"
  },
  "homepage": "https://github.com/segersniels/image#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
